<h1>Tasks</h1>

<%if @tasks.any? %>
	<% @tasks.each do |task|%>
  <%if task.archived != 1 %>
    <div class="row">
      <div class="col-sm-2"></div>
      <div class="col-sm-8">
        <h1><%=task.title %></h1>
      </div>
      <div class="col-sm-2">
          <button class="btn btn-info archive" data-id="<%=task.id%>"> Archive </button>
      </div>
      <div class="col-sm-12">
        <%= task.description %>
      </div>
    </div>
    <% end %>
	<%end %>
<%end%>

 